<launch>

  <param name="robot_description"
      command="$(find xacro)/xacro $(find hera_description)/robots/hera_full.urdf.xacro"/>

  <!-- Load joint controller configurations from YAML file to parameter server -->
  <rosparam file="$(find hera_description)/config/yaml/support_controller.yaml" command="load"/>

  <!-- load the controllers -->
  <node name="controller_spawner" pkg="controller_manager" type="spawner" respawn="false"
	output="screen" ns="/support" args="support_state_controller
                      support_position_controller
                      "/>

  <!-- convert joint states to TF transforms for rviz, etc -->
  <node name="support_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher"
	respawn="false" output="screen">
    <remap from="/joint_states" to="/support/joint_states" />
  </node>

</launch>